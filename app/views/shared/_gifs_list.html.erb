<div id="all_gifs">
  <% @gifs.reverse.each do |gif| %>
    <div class="well col-md-12 border">
    <center>
      <h3><p>
        <%= gif.category %>
      </p></h3>
      <p>
        <img src="<%= gif.image_path %>" alt="<%= gif.category %> gif">
      </p>
      <p>
        <%= link_to "Delete", admin_gif_path(gif), method: :delete, class:'btn' if current_admin?%>
        <%= link_to "Unfavorite", unfavorite_path(gif), method: :delete, class:'btn' if favorite_gif?(gif) %>
        <%= link_to "Favorite", new_favorite_path(gif), method: :post, class:'btn' if not_favorite_gif?(gif) %>
        <%= facebook_button :facebook=> {:send=> 'true', :url=> "#{gif.image_path}"} if current_user %>
      </p>
    </center>
    </div>
  <% end %>
</div>

<div class="vertical-center-row">
  <div class="well col-md-9">
    <%= form_for :sessions, url: login_path do |f| %>
      <p>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </p>
      <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </p>
      <div class="col-sm-offset-2 col-sm-10">
      <p>
        <%= f.submit "Login", class:'btn'%>
      </p>
      </div>
    <% end %>
  </div>
</div>
